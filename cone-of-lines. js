var h = 30
function setup() { 
  createCanvas(600, 600);
	background(255);
noFill()
} 

function draw() {
  background(255);
	triangle (0,0,mouseX,mouseY,width,0)
	triangle (h,0,mouseX,mouseY,width-h,0)
	triangle (2*h,0,mouseX,mouseY,width-2*h,0)
	triangle (3*h,0,mouseX,mouseY,width-3*h,0)
	triangle (4*h,0,mouseX,mouseY,width-4*h,0)
	triangle (4*h,0,mouseX,mouseY,width-4*h,0)
	triangle (5*h,0,mouseX,mouseY,width-5*h,0)
	triangle (6*h,0,mouseX,mouseY,width-6*h,0)
	triangle (7*h,0,mouseX,mouseY,width-7*h,0)
	triangle (8*h,0,mouseX,mouseY,width-8*h,0)
	triangle (9*h,0,mouseX,mouseY,width-9*h,0)
	triangle (10*h,0,mouseX,mouseY,width-10*h,0)
}
